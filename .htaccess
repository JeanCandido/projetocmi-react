RewriteEngine On
RewriteBase /

# Redireciona para https://www.cmiengenharia.com.br
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\.cmiengenharia\.com.br$ [NC]
RewriteRule ^(.*)$ https://www.cmiengenharia.com.br/$1 [L,R=301]

